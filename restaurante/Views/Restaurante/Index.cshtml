@model IEnumerable<RestaurantSystem.Models.ViewModel.Restaurante>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.restName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.restName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.restId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.restId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.restId }) |
            @Html.ActionLink("Mostrar Pratos", "ShowPrato", new { id = item.restId })
        </td>
    </tr>
}

</table>
